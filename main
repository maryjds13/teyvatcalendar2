<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimalist Calendar Widget</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: white; /* or transparent depending on your need */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .calendar-widget {
            width: 300px; /* adjust for compactness */
            text-align: center;
            background-color: transparent;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.5em;
            color: #37352F;
            margin: 10px 0;
        }

        .nav-button {
            background-color: transparent;
            border: none;
            color: #37352F;
            cursor: pointer;
            font-size: 1.5em;
        }

        .divider {
            border: none;
            border-bottom: 1px solid #ada3dd;
            margin: 10px 0;
        }

        .weekdays {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            color: #ada3dd;
            font-size: 1em;
        }

        .days-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            grid-gap: 10px;
            font-size: 1em;
            color: #37352F;
        }

        .day {
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
        }

        .current-day {
            background-color: #ada3dd;
            color: white;
        }

        .selected-day {
            border: 2px solid #ada3dd;
            color: #37352F;
        }
    </style>
</head>
<body>
    <div class="calendar-widget">
        <!-- Header with month and year -->
        <div class="header">
            <button id="prevMonth" class="nav-button">&#9664;</button> <!-- Left arrow -->
            <span id="monthYear">JAN 2023</span>
            <button id="nextMonth" class="nav-button">&#9654;</button> <!-- Right arrow -->
        </div>
        <!-- Divider -->
        <hr class="divider">
        
        <!-- Weekdays -->
        <div class="weekdays">
            <span>MON</span><span>TUE</span><span>WED</span>
            <span>THU</span><span>FRI</span><span>SAT</span><span>SUN</span>
        </div>
        
        <!-- Divider -->
        <hr class="divider">
        
        <!-- Days grid -->
        <div class="days-grid" id="daysGrid">
            <!-- Days will be injected here via JavaScript -->
        </div>
    </div>

    <script>
        const daysGrid = document.getElementById('daysGrid');
        const monthYear = document.getElementById('monthYear');
        let currentDate = new Date();

        // Function to display the month and year in the "JAN 2023" format
        function displayMonthYear(date) {
            const options = { year: 'numeric', month: 'short' };
            monthYear.textContent = date.toLocaleDateString('en-US', options).toUpperCase();
        }

        // Function to generate days grid
        function generateCalendar(date) {
            daysGrid.innerHTML = '';
            
            const firstDay = new Date(date.getFullYear(), date.getMonth(), 1).getDay();
            const lastDate = new Date(date.getFullYear(), date.getMonth() + 1, 0).getDate();

            // Get the current day for highlighting
            const today = new Date();
            const isCurrentMonth = today.getMonth() === date.getMonth() && today.getFullYear() === date.getFullYear();
            const currentDay = isCurrentMonth ? today.getDate() : null;

            // Loop to generate day cells
            for (let i = 1; i <= lastDate; i++) {
                const dayDiv = document.createElement('div');
                dayDiv.classList.add('day');
                dayDiv.textContent = i;

                if (i === currentDay) {
                    dayDiv.classList.add('current-day');
                }

                dayDiv.addEventListener('click', function () {
                    // Remove previous selected-day class
                    document.querySelectorAll('.selected-day').forEach(e => e.classList.remove('selected-day'));

                    if (i !== currentDay) {
                        dayDiv.classList.add('selected-day');
                    }
                });

                daysGrid.appendChild(dayDiv);
            }
        }

        // Initialize calendar with current date
        displayMonthYear(currentDate);
        generateCalendar(currentDate);

        // Event listeners for month navigation
        document.getElementById('prevMonth').addEventListener('click', () => {
            currentDate.setMonth(currentDate.getMonth() - 1);
            displayMonthYear(currentDate);
            generateCalendar(currentDate);
        });

        document.getElementById('nextMonth').addEventListener('click', () => {
            currentDate.setMonth(currentDate.getMonth() + 1);
            displayMonthYear(currentDate);
            generateCalendar(currentDate);
        });
    </script>
</body>
</html>
